{
  "name": "my-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dotenv": "^16.0.3",
    "http-proxy-middleware": "^2.0.6",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-bootstrap-icons": "^1.10.3",
    "react-calendar": "^4.2.1",
    "react-click-away-listener": "^2.2.3",
    "react-cookie": "^4.1.1",
    "react-date-picker": "^10.0.3",
    "react-datetime-picker": "^5.0.3",
    "react-dom": "^18.2.0",
    "react-idle-timer": "^5.6.2",
    "react-jwt": "^1.1.8",
    "react-moveable": "^0.49.2",
    "react-ratings-declarative": "^3.4.1",
    "react-router": "^6.10.0",
    "react-select": "^5.7.2",
    "react-time-picker": "^6.0.4",
    "react-toastify": "^9.1.2"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --watchAll --ci --no-watchAll --passWithNoTests",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom='./src/**'",
    "test:watch": "npm test -- --watchAll",
    "lint": "eslint ./ --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix --ext .js,.jsx,.ts .",
    "systest": "npx playwright test --reporter list",
    "systest:fast": "npx playwright test --reporter list --project 'Mobile Chrome'",
    "systest:ui": "npx playwright test --ui"
  },
  "jest": {
    "coverageReporters": [
      "text-summary",
      "cobertura"
    ],
    "modulePathIgnorePatterns": [
      "sys-test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "lines": 90
      }
    },
    "coverageDirectory": "coverage/"
  },
  "eslintConfig": {
    "rules": {
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "testing-library/prefer-screen-queries": "off"
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "sys-test/**/*.ts",
          "sys-test/**/*.tsx"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser"
      }
    ],
    "env": {
      "jest/globals": true
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "prettier": "@imaginary-cloud/prettier-config",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@imaginary-cloud/prettier-config": "^1.0.0",
    "@playwright/test": "^1.32.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "react-router-dom": "^6.10.0",
    "vite": "^4.3.1",
    "vite-plugin-eslint": "^1.8.1"
  }
}
