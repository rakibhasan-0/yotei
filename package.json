{
  "name": "my-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/user-event": "^14.4.3",
    "dotenv": "^16.0.3",
    "http-proxy-middleware": "^2.0.6",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-bootstrap-icons": "^1.10.3",
    "react-calendar": "^4.2.1",
    "react-click-away-listener": "^2.2.3",
    "react-cookie": "^4.1.1",
    "react-date-picker": "^10.0.3",
    "react-datetime-picker": "^5.0.3",
    "react-dom": "^18.2.0",
    "react-idle-timer": "^5.6.2",
    "react-jwt": "^1.1.8",
    "react-moveable": "^0.49.2",
    "react-ratings-declarative": "^3.4.1",
    "react-router": "^6.10.0",
    "react-select": "^5.7.2",
    "react-time-picker": "^6.0.4",
    "react-toastify": "^9.1.2"
  },
  "scripts": {
    "start": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "host": "vite --host",
    "test": "jest --watchAll --ci --no-watchAll --passWithNoTests",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom='./src/**'",
    "test:watch": "npm test -- --watchAll",
    "lint": "eslint --fix --ext js,jsx,ts src --ignore-path .gitignore",
    "lint:ci": "eslint --ext js,jsx,ts src --ignore-path .gitignore",
    "systest": "npx playwright test --reporter list",
    "systest:fast": "npx playwright test --reporter list --project 'Mobile Chrome'",
    "systest:ui": "npx playwright test --ui"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "text-summary",
      "cobertura"
    ],
    "modulePathIgnorePatterns": [
      "sys-test"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "lines": 90
      }
    },
    "coverageDirectory": "coverage/"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      ["@babel/preset-react",
      {
        "runtime": "automatic"
      }]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "prettier": "@imaginary-cloud/prettier-config",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@imaginary-cloud/prettier-config": "^1.0.0",
    "@playwright/test": "^1.32.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react-router-dom": "^6.10.0",
    "vite": "^4.3.1",
    "vite-plugin-eslint": "^1.8.1"
  }
}
